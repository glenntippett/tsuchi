<% @items.each_with_index do |item, index| %>
    <ul>
      <li>
        <%= link_to "#{item.name}", item_path(item) %>
        <%= item.item_category %>
        <%= item.quantity %>
        <button type="button" class="btn btn-outline-primary"><%= item.notification %></button>
      </li>
    </ul>
<% end %>
