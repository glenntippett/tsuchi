  <% if !params[:list_id] %>
  <h2>All your items</h2>
  <% else %>
  <% if @items[0] %>
  <h2> <%= @items[0].list.name %></h2>
  <% end %>
  <% end %>
  <% if @form %>
  <p><%= render "form_item", item: @item, optional: !params[:list_id] %></p>
