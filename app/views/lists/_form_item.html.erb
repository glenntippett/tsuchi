<%= simple_form_for [@list, @item] do |f| %>
  <%= f.input :name %>
  <%= f.input :item_category %>
  <%= f.input :quantity %>
  <%= f.input :completed %>
  <%= f.input :notification %>
  <input type="hidden" name="optional" value="<%= optional %>">
  <%= f.submit %>
<% end %>

