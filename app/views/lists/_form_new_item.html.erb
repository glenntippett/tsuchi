<%= simple_form_for [@list, item] do |f| %>
  <%= f.input :name %>
  <%#= f.input :item_category, as: :select, collection: item_category, prompt: 'Select category', label: false %>
  <%= f.input :item_category, collection: Item::CATEGORIES, prompt: "Choose your category" %>
  <%= f.input :quantity, collection: 1..20, prompt: "How many?" %>
  <input type="hidden" name="optional" value="<%= optional %>">
  <%= f.submit %>
<% end %>


