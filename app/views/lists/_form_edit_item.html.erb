<%= simple_form_for [@list, item] do |f| %>
  <%= f.input :name,input_html: {value: f.object.name} %>
  <%= f.input :item_category, collection: Item::CATEGORIES, prompt: "Choose your category", input_html: {value: f.object.item_category} %>
  <%= f.input :quantity, input_html: {value: f.object.quantity}, collection: 1..20, prompt: "How many?" %>
  <%= f.submit "Edit"%>
<% end %>
