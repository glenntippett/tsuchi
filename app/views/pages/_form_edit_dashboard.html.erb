<%= simple_form_for @user do |f| %>
  <%= f.input :first_name,input_html: {value: f.object.first_name} %>
  <%= f.input :last_name,input_html: {value: f.object.last_name} %>
  <%= f.input :email,input_html: {value: f.object.email} %>
  <%= f.input :mobile_number,input_html: {value: f.object.mobile_number} %>
  <%= f.input :address,input_html: {value: f.object.address} %>
  <%= f.input :photo, as: :file  %>
  <%= f.submit "Save", id: "btn-login" %>
<% end %>
